---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import "../styles/reset.scss";
import "../styles/functions.scss";

const { title } = Astro.props;

//OGP
// const socialImageURL = new URL(Astro.url.pathname, Astro.site);
const product_site = "";
const ogpImageURL = `${product_site}ogp.png`;

const siteUrl = Astro.site;
const siteTitle: string = "WebGL-Demos";
const siteType: string = "website";
const siteDiscription: string = "";
const twitterCard: string = "summary_large_image";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- meta -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={siteDiscription} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:type" content={siteType} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDiscription} />
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:image" content={ogpImageURL} />
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDiscription} />
    <meta name="twitter:image" content={ogpImageURL} />
    <!-- / -->
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.png" /> -->
    <link rel="icon" href="/favicon.svg" />
    <meta name="robots" content="noindex" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );

    --main-color: #02957a;
    --sub-color: #f2e8d5;
    --text-color: #ccc;
    --color-black: #000;

    --layout-nav-color: #ffffff;

    --bg-color: #222;
    --border-color: #d4d4d4;

    --xxl: 3.6rem;
    --xl: 3.2rem;
    --lg: 2.4rem;
    --lmd: 1.8rem;
    --md: 1.6rem;
    --sm: 1.4rem;
    --ss: 1.2rem;
    --index-header: 100;
    --index-modal: 200;
    --index-animation: 1000;
    --inner: 134rem;
  }
</style>
